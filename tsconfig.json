{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "strict": false,                  
    "esModuleInterop": true,        
    "skipLibCheck": true,            
    "forceConsistentCasingInFileNames": true, 
    "typeRoots": ["./node_modules/@types"],  
    "types": ["node"]               
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}